<h1>Добавить новый билет</h1>

<form action="/tickets/add" method="POST">
    <div class="input-field">
        <input id="departureCity" name="departureCity" type="text" class="validate" required>
        <label for="departureCity">Город отправления</label>
         <span class="helper-text" data-error="Введите Город"></span>
    </div>

    <div class="input-field">
        <input id="arrivalCity" name="arrivalCity" type="text" class="validate" required >
        <label for="arrivalCity">Город прибытия</label>
          <span class="helper-text" data-error="Введите Город"></span>
    </div>

    <div class="input-field">
        <input id="airplaneName" name="airplaneName" type="text" class="validate" required>
        <label for="airplaneName">Название самолета</label>
         <span class="helper-text" data-error="Введите название самолета"></span>
    </div>
       <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Цена</label>
         <span class="helper-text" data-error="Введите Цену"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Добавить билет</button>
</form>
